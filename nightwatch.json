{
  "src_folders": ["tests/E2E/specs"],
  "page_objects_path": "tests/E2E/pages",
  "output_folder": "tests/E2E/log/tests",

  "selenium": {
    "start_process": true,
    "log_path": "tests/E2E/log/selenium",
    "server_path":
      "node_modules/selenium-standalone/.selenium/selenium-server/",
    "cli_args": {
      "webdriver.chrome.driver":
        "node_modules/selenium-standalone/.selenium/chromedriver/",
      "webdriver.gecko.driver":
        "node_modules/selenium-standalone/.selenium/geckodriver/",
      "webdriver.edge.driver": ""
    }
  },

  "test_settings": {
    "default": {
      "silent": true,
      "skip_testcases_on_fail": false,

      "screenshots": {
        "enabled": true,
        "on_error": false,
        "on_failure": true,
        "path": "tests/E2E/log/screenshots"
      },

      "desiredCapabilities": {
        "browserName": "firefox",
        "marionette": true,
        "acceptSslCerts": true,
        "javascriptEnabled": true
      },

      "globals": {
        "waitForConditionTimeout": 21000
      }
    },

    "bs": {
      "selenium_port": 80,
      "selenium_host": "hub-cloud.browserstack.com",

      "desiredCapabilities": {
        "browser": "chrome",
        "browserstack.key": "",
        "browserstack.user": "",
        "browserstack.debug": true,
        "build": "nightwatch-browserstack"
      }
    },

    "chrome": {
      "desiredCapabilities": {
        "browserName": "chrome",
        "acceptSslCerts": true,
        "javascriptEnabled": true
      }
    },

    "edge": {
      "desiredCapabilities": {
        "browserName": "MicrosoftEdge"
      }
    }
  }
}
