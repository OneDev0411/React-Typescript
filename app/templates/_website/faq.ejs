      function renderFAQ() {
        const el = document.body.querySelector('#FAQ')

        faqData.forEach(function renderRow(faq) {
          const rowEl = document.createElement('li')
          const questionEl = document.createElement('h4')
          questionEl.textContent = faq.question
          const answerEl = document.createElement('p')
          answerEl.textContent = faq.answer

          rowEl.appendChild(questionEl)
          rowEl.appendChild(answerEl)
          el.append(rowEl)
        })
      }

      function generateFAQJsonLD() {
        const output = {
          '@context': 'https://schema.org',
          '@type': 'FAQPage',
          mainEntity: faqData.map(function generateJsonRow(faq) {
            return {
              '@type': 'Question',
              name: faq.question,
              acceptedAnswer: {
                '@type': 'Answer',
                text: faq.answer
              }
            }
          })
        }

        const script = document.createElement('script')
        script.type = 'application/ld+json'
        script.innerText = JSON.stringify(output)
        document.body.append(script)
      }

      renderFAQ()
      generateFAQJsonLD()
    </script>
