{% for article in articles %}
  <div data-type="article" data-article="left" rechat-editable="tree">
    <div data-type="grid-row" class="pure-g">
      <div data-type="grid-column" class="pure-u-1-3">
        <img data-type="image" class="pure-img" rechat-assets="static" src="{{ article.image }}"></div>
        <div data-type="grid-column" class="pure-u-2-3">
          <h3 data-type="headline">
            {{ article.title }}
          </h3>
          <div data-type="text">
            {{ article.description }}
          </div>
          <a data-type="button" class="pure-button" href="{{ article.url }}" target="_blank">
            Read More
          </a>
        </div>
      </div>
    </data>
  {% endfor %}