<div data-type="agent-group" data-agent="left" rechat-editable="tree">
  <div data-type="agent-list">
    {% for user in users %}
      <div data-type="agent-item">
        <div data-type="grid-row" class="pure-g">
          <div data-type="grid-item" class="pure-u-1-3">
            <img data-type="image" src="{{ user.profile_image_url }}" rechat-assets="avatar"/>
          </div>
          <div data-type="grid-item" class="pure-u-2-3">
            <h3 data-type="text">
              {{ user.display_name }}
            </h3>
            <div data-type="text">
              {{ user.phone_number | phone }}
            </div>
            <a data-type="text" href="mailto:{{ user.email }}">
              {{ user.email }}
            </a>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</div>