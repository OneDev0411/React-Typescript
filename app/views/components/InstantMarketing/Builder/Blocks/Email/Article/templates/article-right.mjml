<mj-section padding="20px 20px" rechat-editable="tree" direction="rtl" background-color="#fff">
  <mj-column vertical-align="middle">
    <mj-image padding="0" rechat-assets="static" src={{image}}></mj-image>
  </mj-column>
  <mj-column vertical-align="middle" padding-right="10px">
    <mj-text padding="0" color="#000" font-family="Helvetica, Arial, sans-serif" align="left" rechat-editable="tree" font-size="20px" line-height="1.5">
      {{title}}
    </mj-text>
    <mj-text padding="0" font-family="Helvetica, Arial, sans-serif" align="left" rechat-editable="tree" font-size="14px" line-height="1.5">
      {{description}}
    </mj-text>
    <mj-spacer height="10px"></mj-spacer>
    <mj-button href="{{url}}" rechat-editable="tree" padding="0" inner-padding="8px 20px" border-radius="4px" font-family="Helvetica, Arial, sans-serif" font-size="14px" line-height="1.5" color="{{getColor('beta.tb')}}" background-color="{{getColor('beta.bg')}}" align="left">
      Read More
    </mj-button>
  </mj-column>
</mj-section>
