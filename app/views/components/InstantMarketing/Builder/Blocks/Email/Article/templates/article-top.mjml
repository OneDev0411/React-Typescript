<mj-section padding="0 20px" background-color="#fff" rechat-editable="tree">
  <mj-column>
    <mj-image padding="0" rechat-assets="static" src="{{image}}"></mj-image>

    <mj-button href={{url}} inner-padding="0" padding="0" text-decoration="underline" background-color="#fff" color="#000" font-family="Helvetica, Arial, sans-serif" align="center" rechat-editable="tree" font-size="20px" line-height="1.5">
      {{title}}
    </mj-button>

    <mj-text font-family="Helvetica, Arial, sans-serif" align="center" rechat-editable="tree" font-size="14px" line-height="1.5">
      {{description}}
    </mj-text>
  </mj-column>
</mj-section>
