{% for usersBatch in users | batch(4) %}
<mj-section padding="20px 20px" background-color="#fff">
  {% for user in usersBatch %}
  <mj-column>
    <mj-image padding="0" width="100px" rechat-assets="avatar" src="{{ user.profile_image_url }}"></mj-image>

    <mj-text padding="0" font-family="Helvetica, Arial, sans-serif" align="center" rechat-editable="tree" font-size="20px" line-height="1.5">
      {{user.display_name}}
    </mj-text>

    <mj-button href="mailto:{{user.email}}" inner-padding="0" padding="0" text-decoration="underline" background-color="#fff" color="#262626" font-family="Helvetica, Arial, sans-serif" align="center" rechat-editable="tree" font-size="14px" line-height="1.5">
      {{user.email}}
    </mj-button>

    <mj-text font-family="Helvetica, Arial, sans-serif" align="center" rechat-editable="tree" font-size="14px" line-height="1.5" color="#262626">
      {{user.phone_number | phone}}
    </mj-text>
  </mj-column>
  {% endfor %}
</mj-section>
{% endfor %}
