{% for usersBatch in users | batch(4) %}
<mj-section background-color="#fff" padding-top="0" padding-bottom="5px">
  {% for user in usersBatch %}
  <mj-column>
    <mj-image width="100px" rechat-assets="avatar" src="{{ user.profile_image_url }}" padding="0px" padding-bottom="8px"></mj-image>

    <mj-text rechat-editable="true" font-family="Helvetica Neue,Helvetica,system-ui,-apple-system,BlinkMacSystemFont,Segoe UI,Arial,sans-serif" font-weight="500" font-size="14px" align="center" color="#262626" padding="4px 12px">
      {{user.display_name}}
    </mj-text>

    <mj-text rechat-editable="true" font-family="Helvetica Neue,Helvetica,system-ui,-apple-system,BlinkMacSystemFont,Segoe UI,Arial,sans-serif" font-weight="400" font-size="13px" align="center" color="#262626" padding="4px 12px">
      {{user.email}}
    </mj-text>

    <mj-text rechat-editable="true" font-family="Helvetica Neue,Helvetica,system-ui,-apple-system,BlinkMacSystemFont,Segoe UI,Arial,sans-serif" font-weight="400" font-size="13px" align="center" color="#262626" padding="4px 12px">
      {{user.phone_number}}
    </mj-text>
  </mj-column>
  {% endfor %}
</mj-section>
{% endfor %}
