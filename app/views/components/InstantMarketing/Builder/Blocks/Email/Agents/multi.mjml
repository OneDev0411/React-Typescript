<mj-section padding="20px 20px" text-align="left" background-color="#fff" rechat-editable="tree">
  <mj-column>
    <mj-image src="{{ users[0].profile_image_url }}" width="250px" padding="4px 25px" rechat-assets="avatar">
    </mj-image>
  </mj-column>
  <mj-column vertical-align="bottom">
    {% for user in users %}
    <mj-text text-transform="uppercase" font-weight="600" font-size="13px" padding="5px 0" font-family="Helvetica, Arial, sans-serif" rechat-editable="tree" line-height="1">
      {{user.display_name}}
    </mj-text>
    <mj-text padding="5px 0" font-size="12px" font-family="Helvetica, Arial, sans-serif" rechat-editable="tree" line-height="1">
      {{user.phone_number | phone}}
    </mj-text>
    <mj-button color="#000" font-size="12px" inner-padding="0" padding="5px 0 10px 0" href="mailto:{{user.email}}" align="left" text-align="left" text-decoration="none" background-color="#fff" font-family="Helvetica, Arial, sans-serif" rechat-editable="tree" line-height="1">
      {{user.email}}
    </mj-button>
    {% endfor %}
  </mj-column>
</mj-section>
