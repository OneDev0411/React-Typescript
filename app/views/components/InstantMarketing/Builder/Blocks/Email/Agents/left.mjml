{% for user in users %}
<mj-section mj-class="container" padding="20px 0" text-align="left" rechat-editable="tree">
  <mj-column>
    <mj-image src="{{ user.profile_image_url }}" width="250px" padding="4px 25px" rechat-assets="avatar">
    </mj-image>
  </mj-column>
  <mj-column vertical-align="bottom">
    <mj-text mj-class="container" text-transform="uppercase" font-weight="600" font-size="17px" padding="5px 0"  rechat-editable="tree" line-height="1">
      {{user.display_name}}
    </mj-text>
    <mj-text mj-class="container" padding="5px 0" font-size="16px" rechat-editable="tree" line-height="1">
      {{user.phone_number | phone}}
    </mj-text>
    <mj-button border="none" inner-padding="0" padding="5px 0" href="mailto:{{user.email}}" align="left" text-align="left" text-decoration="none"  rechat-editable="tree" font-size="16px" line-height="1">
      {{user.email}}
    </mj-button>
  </mj-column>
</mj-section>
{% endfor %}
