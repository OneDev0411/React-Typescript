{% for user in users %}
<mj-section padding="20px 20px" text-align="left" background-color="#fff">
  <mj-column vertical-align="middle" width="100px" padding-right="10px">
    <mj-image padding="0" width="100px" rechat-assets="avatar" align="left" src="{{ user.profile_image_url }}"></mj-image>
  </mj-column>
  <mj-column vertical-align="middle">
    <mj-text padding="0" font-family="Helvetica, Arial, sans-serif" align="left" rechat-editable="tree" font-size="20px" line-height="1.5">
      {{user.display_name}}
    </mj-text>
    <mj-button inner-padding="0" padding="0" href="mailto:{{user.email}}" align="left" text-decoration="underline" background-color="#fff" color="#262626" font-family="Helvetica, Arial, sans-serif" rechat-editable="tree" font-size="14px" line-height="1.5">
      {{user.email}}
    </mj-button>
    <mj-text padding="0" font-family="Helvetica, Arial, sans-serif" align="left" rechat-editable="tree" font-size="14px" line-height="1.5" color="#262626">
      {{user.phone_number | phone}}
    </mj-text>
  </mj-column>
</mj-section>
{% endfor %}
