{% for listing in listings %}
<mj-section background-color="#fff" padding-top="0" padding-bottom="5px">
  <mj-column width="100%">
    <mj-text rechat-editable="true" padding="24px" font-family="Helvetica Neue,Helvetica,system-ui,-apple-system,BlinkMacSystemFont,Segoe UI,Arial,sans-serif" font-weight="Bold" font-size="28px" line-height="1.15" color="#000" align="left">
      Must See
    </mj-text>
  </mj-column>

  <mj-column width="100%">
    <mj-image padding="0 24px 16px 24px" rechat-assets="listing-image" rechat-listing="{{ listing.id }}" src="{{listing.gallery_image_urls[0]}}" align="center"></mj-image>
  </mj-column>

  <mj-column width="100%">
    <mj-text rechat-editable="true" padding="0 24px 8px 24px" font-family="Helvetica Neue,Helvetica,system-ui,-apple-system,BlinkMacSystemFont,Segoe UI,Arial,sans-serif" font-size="20px" line-height="1.2" color="#000" align="left">
      {{listing.property.address.street_address}}
    </mj-text>
    <mj-text rechat-editable="true" padding="0 24px" font-family="Helvetica Neue,Helvetica,system-ui,-apple-system,BlinkMacSystemFont,Segoe UI,Arial,sans-serif" font-size="16px" line-height="1" color="#666" font-weight="500" align="left">
      {{ listing.price | currency }}
    </mj-text>

    <mj-text rechat-editable="true" padding="16px 24px 24px 24px" font-family="Helvetica Neue,Helvetica,system-ui,-apple-system,BlinkMacSystemFont,Segoe UI,Arial,sans-serif" font-size="16px" line-height="1.5" color="#1A1A1A" align="left">
      {% if listing.property.bedroom_count %}
      <span>{{listing.property.bedroom_count}} Beds,</span>
      {% endif %}
      {% if listing.property.bathroom_count %}
      <span>{{listing.property.bathroom_count}} Baths,</span>
      {% endif %}
      {% if listing.property.lot_square_meters %}
      <span>{{listing.property.lot_square_meters | area}} Sqft,</span>
      {% endif %}
      {% if listing.property.year_built %}
      <span>Built in {{listing.property.year_built}}</span>
      {% endif %}
    </mj-text>

    <mj-button rechat-editable="true" inner-padding="4px 16px" padding="0 24px" border-radius="4px" font-family="Helvetica Neue,Helvetica,system-ui,-apple-system,BlinkMacSystemFont,Segoe UI,Arial,sans-serif" font-size="16px" font-weight="500" line-height="1.5" height="32px" color="#0945EB" border="1px solid #0945EB" background-color="#fff" align="left" href="{{getListingUrl(listing)}}">
      View Property
    </mj-button>
  </mj-column>
</mj-section>
{% endfor %}
