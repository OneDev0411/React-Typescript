{% for listing in listings %}
<mj-section padding="20px 20px" rechat-editable="tree" background-color="#fff">
  <mj-column>
    <mj-image padding="0" rechat-assets="listing-image" rechat-listing="{{ listing.id }}" src="{{listing.gallery_image_urls[0]}}" align="left"></mj-image>
    <mj-text padding="0" font-family="Helvetica, Arial, sans-serif" rechat-editable="tree" font-size="20px" line-height="1.5" align="left">
      {{listing.property.address.street_address}}
    </mj-text>
    <mj-text padding="0" font-family="Helvetica, Arial, sans-serif" rechat-editable="tree" font-size="16px" color="#444" line-height="1.5" align="left">
      <strong>{{ listing.price | currency }}</strong>{% if listing.is_lease %}/mo{% endif %}
    </mj-text>
    <mj-spacer height="10px"></mj-spacer>
    <mj-text padding="0" font-family="Helvetica, Arial, sans-serif" rechat-editable="tree" font-size="14px" color="#444" line-height="1.5" align="left">
      {% if listing.property.bedroom_count %}
      <span><strong>{{listing.property.bedroom_count}}</strong> Beds,</span>
      {% endif %}
      {% if listing.property.bathroom_count %}
      <span><strong>{{listing.property.bathroom_count}}</strong> Baths,</span>
      {% endif %}
      {% if listing.property.square_meters %}
      <span><strong>{{listing.property.square_meters | area}}</strong> Sqft,</span>
      {% endif %}
      {% if listing.property.year_built %}
      <span>Built in <strong>{{listing.property.year_built}}</strong></span>
      {% endif %}
    </mj-text>
    <mj-spacer height="10px"></mj-spacer>
    <mj-button rechat-editable="tree" padding="0" inner-padding="8px 20px" border-radius="4px" font-family="Helvetica, Arial, sans-serif" font-size="14px" line-height="1.5" align="left" href="{{getListingUrl(listing)}}">
      View Listing
    </mj-button>
  </mj-column>
</mj-section>
{% endfor %}
